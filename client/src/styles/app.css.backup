* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html,
body,
#root {
    width: 100%;
    height: 100%;
}

:root {
    --bg-warm: #2d1810;
    --bg-warm-light: #3d2418;
    --bg-paper: #f4e8d8;
    --bg-wood: #5a3f2a;
    --bg-wood-dark: #3e2b1c;
    --border-sketch: #8b6f47;
    --border-dark: #2a1810;
    --accent-fire: #ff9447;
    --accent-leaf: #7fb069;
    --accent-sky: #6fafe8;
    --accent-berry: #d05353;
    --text-ink: #2a1810;
    --text-light: #f4e8d8;
    --text-brown: #5a3f2a;
    --shadow-warm: 0 8px 24px rgba(45, 24, 16, 0.4);
    --shadow-soft: 0 4px 12px rgba(45, 24, 16, 0.25);
    --font-game: 'Comic Sans MS', 'Chalkboard SE', 'Marker Felt', 'Noto Sans SC', sans-serif;
}

body {
    font-family: var(--font-game);
    background:
        repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 255, 255, 0.01) 10px, rgba(255, 255, 255, 0.01) 11px),
        radial-gradient(circle at 25% 20%, rgba(255, 198, 107, 0.12), transparent 45%),
        radial-gradient(circle at 75% 70%, rgba(212, 140, 71, 0.1), transparent 50%),
        linear-gradient(135deg, #3d2418 0%, #2d1810 100%);
    color: var(--text-light);
    overflow: hidden;
    user-select: none;
    letter-spacing: 0.03em;
}

#app {
    width: 100%;
    height: 100%;
}

.hidden {
    display: none !important;
}

/* 认证界面 */
.auth-screen {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(120deg, rgba(30, 18, 33, 0.8), rgba(24, 16, 27, 0.9));
    backdrop-filter: blur(24px);
    z-index: 1000;
}

.auth-card {
    width: min(420px, 92%);
    padding: 36px 34px;
    border-radius: 22px;
    border: 1px solid rgba(255, 204, 215, 0.35);
    background: linear-gradient(140deg, rgba(255, 241, 236, 0.2), rgba(74, 43, 61, 0.55));
    box-shadow: 0 34px 70px rgba(19, 7, 21, 0.65);
    display: flex;
    flex-direction: column;
    gap: 26px;
    position: relative;
    overflow: hidden;
}

.auth-card::before {
    content: '';
    position: absolute;
    inset: 1px;
    border-radius: 20px;
    pointer-events: none;
    background: linear-gradient(135deg, rgba(255, 224, 223, 0.25), rgba(68, 37, 57, 0.35));
    opacity: 0.6;
}

.auth-card > * {
    position: relative;
}

.auth-card h1 {
    font-size: 2.3rem;
    text-align: center;
    background: linear-gradient(120deg, #ffd6e0 0%, #ffb6c1 40%, #ffdfb2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: 4px;
}

.auth-tabs {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    padding: 6px;
    background: rgba(255, 209, 226, 0.12);
    border-radius: 14px;
    border: 1px solid rgba(255, 209, 226, 0.24);
}

.auth-tab {
    padding: 12px 0;
    border-radius: 10px;
    font-size: 0.95rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    transition: all 0.25s ease;
    cursor: pointer;
    text-align: center;
    color: rgba(255, 236, 240, 0.68);
    background: rgba(255, 255, 255, 0.03);
}

.auth-tab.active {
    background: linear-gradient(135deg, rgba(255, 190, 210, 0.75), rgba(255, 216, 179, 0.7));
    color: #301622;
    box-shadow: 0 8px 18px rgba(255, 196, 213, 0.32);
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.auth-field label {
    display: block;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.72);
    margin-bottom: 6px;
}

.auth-field input {
    width: 100%;
    padding: 12px 16px;
    border-radius: 12px;
    border: 1px solid rgba(255, 214, 222, 0.4);
    background: rgba(255, 255, 255, 0.08);
    color: #fff4ee;
    transition: border 0.25s ease, box-shadow 0.25s ease, background 0.25s ease;
}

.auth-field input:focus {
    outline: none;
    border: 1px solid rgba(255, 214, 188, 0.9);
    background: rgba(255, 255, 255, 0.14);
    box-shadow: 0 0 0 4px rgba(255, 214, 188, 0.25);
}

.auth-button {
    margin-top: 8px;
    width: 100%;
    padding: 14px;
    border: none;
    border-radius: 16px;
    font-size: 1rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    cursor: pointer;
    background: linear-gradient(120deg, #ffe1b5 0%, #ffb4c6 45%, #ff8fb3 100%);
    color: #331621;
    box-shadow: 0 20px 36px rgba(255, 167, 190, 0.35);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.auth-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 24px 44px rgba(255, 174, 195, 0.45);
}

.auth-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    box-shadow: none;
}

.auth-hint {
    margin-top: 4px;
    font-size: 0.85rem;
    line-height: 1.4;
    color: rgba(255, 235, 240, 0.8);
    padding: 14px;
    border-radius: 14px;
    background: rgba(255, 197, 208, 0.12);
    border: 1px solid rgba(255, 197, 208, 0.2);
}

/* 游戏布局 */
.game-shell {
    position: relative;
    width: 100%;
    min-height: 100vh;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.game-shell::before,
.game-shell::after {
    content: '';
    position: fixed;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.45;
    pointer-events: none;
    z-index: -1;
}

.game-shell::before {
    width: 42vw;
    height: 42vw;
    left: -14vw;
    top: -12vw;
    background: linear-gradient(135deg, rgba(82, 246, 197, 0.46), rgba(77, 125, 255, 0.38));
}

.game-shell::after {
    width: 46vw;
    height: 46vw;
    right: -18vw;
    bottom: -14vw;
    background: linear-gradient(135deg, rgba(240, 108, 200, 0.42), rgba(77, 125, 255, 0.32));
}

.game-screen {
    width: min(100vw, calc(100vh * 2));
    max-height: 100vh;
    aspect-ratio: 2 / 1;
    display: grid;
    grid-template-columns: minmax(0, 1.28fr) minmax(0, 0.88fr);
    grid-template-rows: auto 1fr;
    grid-template-areas:
        "hud hud"
        "stage sidebar";
    gap: clamp(16px, 2.5vw, 32px);
    padding: clamp(14px, 2.5vw, 28px);
    margin: 0;
    background: linear-gradient(150deg, rgba(17, 26, 44, 0.85), rgba(10, 16, 28, 0.92));
    border-radius: var(--radius-large);
    border: 1px solid rgba(79, 181, 255, 0.18);
    box-shadow: var(--shadow-strong);
    position: relative;
    overflow: hidden;
}

.game-screen::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    border: 1px solid rgba(82, 246, 197, 0.16);
    opacity: 0.65;
    pointer-events: none;
}

.game-screen::after {
    content: '';
    position: absolute;
    inset: 12% 8% 14% 8%;
    border-radius: inherit;
    background: radial-gradient(circle at 50% 8%, rgba(103, 149, 255, 0.12), transparent 55%);
    mix-blend-mode: screen;
    opacity: 0.6;
    pointer-events: none;
}

.game-screen > * {
    position: relative;
    z-index: 1;
}

@media (max-width: 1440px) {
    .game-screen {
        grid-template-columns: minmax(0, 1.18fr) minmax(0, 0.82fr);
        gap: clamp(14px, 2.2vw, 28px);
    }
}

@media (max-width: 1080px) {
    .game-screen {
        grid-template-columns: minmax(0, 1.05fr) minmax(0, 0.75fr);
        gap: clamp(12px, 2vw, 22px);
        padding: clamp(12px, 2.2vw, 24px);
    }
}

@media (max-width: 720px) {
    .game-shell {
        padding: 0;
    }

    .game-screen {
        padding: clamp(10px, 4vw, 18px);
        border-radius: 22px;
    }
}

.hud {
    grid-area: hud;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: clamp(10px, 1.8vw, 18px);
    padding: clamp(12px, 2vw, 18px);
    border-radius: var(--radius-medium);
    background: linear-gradient(180deg, rgba(19, 29, 47, 0.96), rgba(12, 18, 31, 0.82));
    border: 1px solid rgba(79, 181, 255, 0.18);
    box-shadow: var(--shadow-soft);
}

.hud .resources {
    display: flex;
    gap: clamp(8px, 1.6vw, 16px);
    align-items: stretch;
}

.hud-user {
    display: flex;
    flex-direction: column;
    gap: 6px;
    color: var(--text-secondary);
}

.hud-logout {
    align-self: flex-start;
    padding: 6px 16px;
    border-radius: var(--radius-small);
    border: 1px solid rgba(240, 108, 200, 0.45);
    background: linear-gradient(90deg, rgba(240, 108, 200, 0.18), rgba(77, 125, 255, 0.18));
    color: var(--text-primary);
    font-size: 0.85rem;
    cursor: pointer;
    transition: transform 0.2s ease, border 0.2s ease, box-shadow 0.2s ease;
}

.hud-logout:hover {
    transform: translateY(-2px);
    border-color: rgba(240, 108, 200, 0.75);
    box-shadow: 0 12px 28px rgba(240, 108, 200, 0.28);
}

@media (max-width: 940px) {
    .hud {
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }

    .hud .resources {
        flex-wrap: wrap;
        justify-content: flex-start;
    }
}

.resource-chip {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 16px;
    border-radius: 18px;
    border: 1px solid rgba(79, 181, 255, 0.32);
    background: linear-gradient(180deg, rgba(16, 25, 42, 0.9), rgba(12, 20, 35, 0.78));
    box-shadow: inset 0 0 14px rgba(47, 144, 255, 0.16);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.resource-chip .icon {
    font-size: 1.05rem;
    opacity: 0.85;
}

.resource-chip .value {
    font-size: 1.05rem;
    font-weight: 600;
}

.resource-chip.bump {
    transform: scale(1.05);
    box-shadow: 0 0 24px rgba(82, 246, 197, 0.4);
    color: var(--accent-primary);
}

.turn-info {
    padding: 12px 16px;
    border-radius: 18px;
    border: 1px solid rgba(82, 246, 197, 0.3);
    background: linear-gradient(180deg, rgba(19, 32, 51, 0.88), rgba(10, 17, 30, 0.75));
    font-size: 0.95rem;
    letter-spacing: 0.08em;
}

.profession-info {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 12px 16px;
    border-radius: 18px;
    border: 1px solid rgba(118, 75, 255, 0.32);
    background: linear-gradient(180deg, rgba(23, 26, 49, 0.92), rgba(18, 21, 40, 0.78));
    box-shadow: inset 0 0 18px rgba(118, 75, 255, 0.18);
}

.profession-body {
    display: flex;
    align-items: center;
    gap: 12px;
}

.profession-name {
    font-size: 0.98rem;
    font-weight: 600;
}

.profession-actions {
    display: flex;
    gap: 12px;
    align-items: center;
}

.profession-button {
    padding: 6px 14px;
    border-radius: 16px;
    border: none;
    cursor: pointer;
    background: linear-gradient(120deg, rgba(82, 246, 197, 0.85), rgba(77, 125, 255, 0.75));
    color: #06101f;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
}

.carry-toggle {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
}

.carry-toggle input {
    accent-color: #4ecdc4;
}

.game-stage {
    grid-area: stage;
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-medium);
    border: 1px solid rgba(79, 181, 255, 0.18);
    background:
        radial-gradient(circle at 48% 8%, rgba(82, 246, 197, 0.12), transparent 55%),
        linear-gradient(160deg, rgba(12, 18, 34, 0.92), rgba(8, 12, 24, 0.92));
    box-shadow: inset 0 0 60px rgba(5, 12, 24, 0.82);
    padding-bottom: clamp(160px, 20vh, 240px);
}

.game-stage::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;
    background: radial-gradient(circle at 50% 50%, rgba(77, 125, 255, 0.12), transparent 68%);
    mix-blend-mode: screen;
    opacity: 0.4;
}

.game-stage #phaser-stage {
    width: 100%;
    height: 100%;
    border-radius: inherit;
    overflow: hidden;
}

.game-stage canvas {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: inherit;
}

.board-container {
    position: absolute;
    inset: 0;
    pointer-events: none;
}

.board-container .forge-canvas {
    pointer-events: auto;
}

.forge-canvas {
    position: absolute;
    inset: clamp(6%, 8vh, 10%) clamp(6%, 10vw, 12%) clamp(22%, 26vh, 28%) clamp(6%, 10vw, 12%);
    border-radius: 26px;
    border: 1px solid rgba(82, 246, 197, 0.32);
    background:
        radial-gradient(circle at 50% 22%, rgba(82, 246, 197, 0.18), transparent 58%),
        radial-gradient(circle at 32% 70%, rgba(77, 125, 255, 0.16), transparent 62%),
        linear-gradient(155deg, rgba(11, 21, 38, 0.95), rgba(8, 14, 26, 0.92));
    box-shadow: inset 0 0 42px rgba(8, 14, 28, 0.9), 0 26px 48px rgba(4, 12, 24, 0.65);
    overflow: hidden;
}

.forge-canvas__halo {
    position: absolute;
    inset: 16% 20% 34% 20%;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(82, 246, 197, 0.28), rgba(0, 0, 0, 0));
    filter: blur(12px);
    opacity: 0.75;
    pointer-events: none;
}

.forge-canvas__hint {
    position: absolute;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.95rem;
    letter-spacing: 2px;
    color: rgba(255, 255, 255, 0.68);
    text-transform: uppercase;
    pointer-events: none;
}

.forge-canvas__card {
    position: absolute;
    transform: translate(-50%, -50%);
    width: clamp(170px, 22vw, 210px);
    padding: 18px 20px 20px;
    border-radius: 18px;
    border: 1px solid rgba(79, 181, 255, 0.26);
    background: linear-gradient(160deg, rgba(17, 29, 48, 0.95), rgba(9, 16, 28, 0.9));
    box-shadow: 0 24px 60px rgba(4, 12, 24, 0.68);
    cursor: grab;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.forge-canvas__card:active {
    cursor: grabbing;
    box-shadow: 0 26px 66px rgba(82, 246, 197, 0.38);
}

.forge-canvas__remove {
    position: absolute;
    top: 10px;
    right: 12px;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: none;
    background: rgba(79, 181, 255, 0.18);
    color: var(--text-primary);
    cursor: pointer;
    font-size: 0.85rem;
}

.forge-canvas__remove:hover {
    background: rgba(82, 246, 197, 0.32);
    color: #031016;
}

.forge-canvas__name {
    font-size: 1.05rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
}

.forge-canvas__type {
    margin-top: 8px;
    font-size: 0.85rem;
    color: var(--text-muted);
}

.card-dock {
    position: absolute;
    left: 50%;
    bottom: clamp(16px, 4vh, 32px);
    transform: translateX(-50%);
    width: min(960px, 92%);
    padding: 20px 24px 24px;
    border-radius: 24px;
    border: 1px solid rgba(79, 181, 255, 0.18);
    background:
        radial-gradient(circle at 10% 12%, rgba(82, 246, 197, 0.18), transparent 65%),
        linear-gradient(160deg, rgba(17, 26, 44, 0.96), rgba(9, 14, 26, 0.92));
    box-shadow: var(--shadow-strong);
    display: flex;
    flex-direction: column;
    gap: 14px;
}

.card-dock__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.card-dock__title {
    font-size: 1rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--text-secondary);
}

.card-dock__draw {
    padding: 8px 18px;
    border-radius: 16px;
    border: none;
    background: linear-gradient(125deg, rgba(82, 246, 197, 0.92), rgba(118, 75, 255, 0.78));
    color: #04101f;
    cursor: pointer;
    font-size: 0.88rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 600;
    box-shadow: 0 12px 24px rgba(79, 181, 255, 0.32);
}

.card-dock__rail {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 16px;
}

.dock-slot {
    padding: 18px 16px;
    border-radius: 18px;
    border: 1px solid rgba(79, 181, 255, 0.22);
    background: linear-gradient(155deg, rgba(16, 26, 42, 0.9), rgba(11, 18, 32, 0.92));
    display: flex;
    flex-direction: column;
    gap: 12px;
    cursor: grab;
    transition: border 0.2s ease, transform 0.2s ease;
}

.dock-slot:active {
    cursor: grabbing;
}

.dock-slot.staged {
    border-color: rgba(82, 246, 197, 0.65);
    box-shadow: 0 0 26px rgba(82, 246, 197, 0.38);
}

.dock-slot.empty {
    border: 1px dashed rgba(79, 181, 255, 0.28);
    background: rgba(8, 12, 22, 0.72);
    align-items: center;
    justify-content: center;
    cursor: default;
}

.dock-slot__hint {
    font-size: 0.85rem;
    letter-spacing: 0.22em;
    color: var(--text-muted);
    text-transform: uppercase;
}

.dock-slot__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
}

.dock-slot__name {
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
}

.dock-slot__rarity {
    padding: 4px 10px;
    border-radius: 14px;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.16em;
}

.dock-slot__rarity.common { background: #999; }
.dock-slot__rarity.uncommon { background: #4caf50; }
.dock-slot__rarity.rare { background: #2196f3; }
.dock-slot__rarity.epic { background: #9c27b0; }
.dock-slot__rarity.legendary { background: #ff9800; }

.dock-slot__meta {
    font-size: 0.82rem;
    color: var(--text-muted);
}

.card-dock__hint {
    font-size: 0.78rem;
    color: var(--text-muted);
    letter-spacing: 0.18em;
    text-transform: uppercase;
}

@media (max-width: 1100px) {
    .forge-canvas {
        inset: clamp(4%, 6vh, 8%) clamp(4%, 6vw, 8%) clamp(28%, 30vh, 32%) clamp(4%, 6vw, 8%);
    }

    .card-dock {
        width: 94%;
        padding: 18px 18px 22px;
        gap: 10px;
    }
}

@media (max-width: 720px) {
    .card-dock {
        bottom: 12px;
        padding: 14px 14px 18px;
    }

    .card-dock__rail {
        gap: 12px;
    }

    .dock-slot {
        padding: 14px;
    }

    .forge-canvas {
        inset: clamp(4%, 5vh, 7%) clamp(4%, 6vw, 7%) clamp(34%, 36vh, 38%) clamp(4%, 6vw, 7%);
    }
}

.forge-overlay {
    position: absolute;
    width: 160px;
    height: 160px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 12px;
    color: #fff;
    font-size: 0.95rem;
    transform: translate(-50%, -50%);
    text-align: center;
}
.hud-actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: flex-end;
}


.forge-overlay .ring {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    border: 2px dashed rgba(78, 205, 196, 0.55);
    animation: pulse 1.6s infinite;
}

.forge-overlay.loading {
    background: radial-gradient(circle, rgba(78, 205, 196, 0.12), rgba(0, 0, 0, 0));
}

.forge-overlay.done {
    background: radial-gradient(circle, rgba(255, 184, 108, 0.18), rgba(0, 0, 0, 0));
}

.sidebar {
    grid-area: sidebar;
    display: flex;
    flex-direction: column;
    gap: clamp(10px, 2vw, 18px);
    padding: clamp(10px, 1.6vw, 18px);
    overflow-y: auto;
    border-radius: var(--radius-medium);
    border: 1px solid rgba(79, 181, 255, 0.14);
    background: linear-gradient(180deg, rgba(16, 25, 44, 0.9), rgba(10, 18, 34, 0.92));
    box-shadow: inset 0 0 36px rgba(5, 12, 24, 0.65);
}

.glass-panel {
    background: linear-gradient(155deg, rgba(18, 28, 48, 0.92), rgba(12, 19, 33, 0.92));
    border-radius: 18px;
    border: 1px solid rgba(79, 181, 255, 0.18);
    padding: 18px;
    box-shadow: 0 18px 40px rgba(4, 12, 24, 0.55);
}

.panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 14px;
}

.panel-header h3 {
    font-size: 0.95rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--text-secondary);
}

.panel-header button {
    padding: 6px 12px;
    border-radius: 14px;
    border: none;
    background: linear-gradient(120deg, rgba(82, 246, 197, 0.82), rgba(118, 75, 255, 0.76));
    color: #04101f;
    cursor: pointer;
    font-size: 0.85rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 600;
}

.card-grid {
    display: grid;
    gap: 12px;
    grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
}

.card {
    padding: 16px;
    border-radius: 16px;
    background: linear-gradient(155deg, rgba(17, 28, 46, 0.9), rgba(10, 17, 30, 0.92));
    border: 1px solid rgba(79, 181, 255, 0.18);
    min-height: 120px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 12px;
    cursor: pointer;
    position: relative;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border 0.2s ease;
}

.card.selected {
    border: 1px solid rgba(82, 246, 197, 0.55);
    box-shadow: 0 0 26px rgba(82, 246, 197, 0.35);
    transform: translateY(-4px);
}

.card-name {
    font-size: 0.98rem;
    font-weight: 600;
    letter-spacing: 0.18em;
    text-transform: uppercase;
}

.card-type {
    font-size: 0.82rem;
    color: var(--text-muted);
}

.card-rarity {
    align-self: flex-start;
    padding: 6px 12px;
    border-radius: 16px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
}

.card-rarity.common { background: #999; }
.card-rarity.uncommon { background: #4caf50; }
.card-rarity.rare { background: #2196f3; }
.card-rarity.epic { background: #9c27b0; }
.card-rarity.legendary { background: #ff9800; }

.forge-panel input[type="text"] {
    width: 100%;
    padding: 12px 14px;
    border-radius: 12px;
    border: 1px solid rgba(79, 181, 255, 0.22);
    background: rgba(12, 19, 32, 0.9);
    color: var(--text-primary);
    margin: 12px 0;
}

.forge-panel button.primary {
    width: 100%;
    padding: 12px;
    border-radius: 14px;
    border: none;
    cursor: pointer;
    background: linear-gradient(125deg, rgba(82, 246, 197, 0.92), rgba(118, 75, 255, 0.82));
    color: #041021;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.18em;
    text-transform: uppercase;
}

.forge-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 24px 0 8px;
}

.forge-loading .animation {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid rgba(78, 205, 196, 0.3);
    border-top-color: rgba(118, 75, 162, 0.8);
    animation: spin 1.2s linear infinite;
}

.forge-loading-message {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 1px;
}

.profession-choices {
    display: grid;
    gap: 12px;
}

.empty {
    padding: 16px 0;
    text-align: center;
    color: rgba(255, 255, 255, 0.55);
}

.profession-card {
    padding: 16px;
    border-radius: 16px;
    border: 1px solid rgba(78, 205, 196, 0.2);
    background: rgba(24, 24, 24, 0.85);
    cursor: pointer;
    transition: transform 0.2s ease, border 0.2s ease;
}

.profession-card:hover {
    transform: translateY(-2px);
    border-color: rgba(78, 205, 196, 0.45);
}

.profession-card .name {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 6px;
}

.profession-card .focus {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
}

.profession-card .desc {
    margin-top: 10px;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
}

.profession-card .bonus {
    margin-top: 14px;
    color: rgba(78, 205, 196, 0.85);
    font-size: 0.9rem;
}

.profession-footer {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    margin-top: 16px;
}

.profession-footer button {
    flex: 1;
    padding: 10px 0;
    border-radius: 14px;
    border: none;
    cursor: pointer;
    background: rgba(76, 205, 196, 0.2);
    color: #4ecdc4;
}

.contract-panel h3 {
    font-size: 1.2rem;
    letter-spacing: 1px;
}

.contract-panel p {
    color: rgba(255, 255, 255, 0.72);
    margin: 12px 0;
}

.contract-choice {
    padding: 16px;
    border-radius: 14px;
    border: 1px solid rgba(118, 75, 162, 0.25);
    background: rgba(26, 26, 26, 0.85);
    cursor: pointer;
    transition: border 0.2s ease, transform 0.2s ease;
}

.contract-choice:hover {
    border-color: rgba(118, 75, 162, 0.55);
    transform: translateY(-3px);
}

.bottom-controls {
    display: flex;
    gap: 12px;
    margin-top: 18px;
}

.bottom-controls button {
    flex: 1;
    padding: 12px 0;
    border-radius: 14px;
    border: none;
    background: linear-gradient(140deg, rgba(25, 38, 62, 0.92), rgba(14, 22, 38, 0.9));
    border: 1px solid rgba(79, 181, 255, 0.16);
    color: var(--text-secondary);
    cursor: pointer;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    font-size: 0.82rem;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border 0.2s ease;
}

.bottom-controls button:hover {
    transform: translateY(-2px);
    border-color: rgba(82, 246, 197, 0.45);
    box-shadow: 0 18px 40px rgba(82, 246, 197, 0.22);
    color: var(--accent-primary);
}

.inventory-overlay {
    position: fixed;
    inset: 0;
    background: rgba(17, 10, 18, 0.68);
    backdrop-filter: blur(16px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 900;
}

.inventory-panel {
    max-width: 880px;
    width: 90%;
    max-height: 80vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.inventory-grid {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    padding-right: 6px;
    overflow-y: auto;
}

.inventory-card {
    display: flex;
    gap: 14px;
    padding: 16px;
    border-radius: 16px;
    border: 1px solid rgba(255, 214, 222, 0.35);
    background: rgba(255, 245, 248, 0.12);
    backdrop-filter: blur(12px);
}

.inventory-icon {
    font-size: 2rem;
    line-height: 1;
}

.inventory-info {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.inventory-name {
    font-size: 1.05rem;
    font-weight: 600;
}

.inventory-rarity {
    align-self: flex-start;
    padding: 2px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    text-transform: uppercase;
    color: #2d1a22;
}

.inventory-qty {
    font-size: 0.85rem;
    color: rgba(255, 244, 240, 0.8);
}

.inventory-desc {
    font-size: 0.8rem;
    line-height: 1.4;
    color: rgba(255, 244, 240, 0.75);
}

.inventory-empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 40px 0;
    color: rgba(255, 244, 240, 0.7);
}

.lobby-shell {
    position: fixed;
    inset: 0;
    padding: clamp(20px, 6vw, 64px);
    display: flex;
    flex-direction: column;
    gap: clamp(20px, 4vw, 34px);
    overflow-y: auto;
    background:
        radial-gradient(120% 140% at 10% 14%, rgba(82, 246, 197, 0.2), transparent 60%),
        radial-gradient(150% 120% at 82% 10%, rgba(77, 125, 255, 0.18), transparent 58%),
        linear-gradient(145deg, var(--bg-deep), var(--bg-deep-alt));
}

.lobby-header {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 24px;
    padding: clamp(24px, 4vw, 32px);
    border-radius: var(--radius-large);
    border: 1px solid rgba(79, 181, 255, 0.22);
    background: linear-gradient(150deg, rgba(18, 29, 49, 0.92), rgba(12, 20, 36, 0.9));
    box-shadow: var(--shadow-strong);
}

.lobby-greeting {
    display: inline-block;
    font-size: 0.8rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: 10px;
}

.lobby-header h2 {
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    margin-bottom: 8px;
    letter-spacing: 0.08em;
}

.lobby-header p {
    color: var(--text-secondary);
    max-width: 520px;
    line-height: 1.6;
}

.lobby-logout {
    padding: 10px 18px;
    border-radius: 18px;
    border: 1px solid rgba(240, 108, 200, 0.4);
    cursor: pointer;
    background: linear-gradient(130deg, rgba(240, 108, 200, 0.2), rgba(77, 125, 255, 0.22));
    color: var(--text-primary);
    letter-spacing: 0.16em;
    text-transform: uppercase;
    font-size: 0.8rem;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border 0.2s ease;
}

.lobby-logout:hover {
    transform: translateY(-2px);
    border-color: rgba(240, 108, 200, 0.7);
    box-shadow: 0 18px 36px rgba(240, 108, 200, 0.32);
}

.lobby-grid {
    display: grid;
    gap: clamp(18px, 3vw, 30px);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

.lobby-map-card {
    position: relative;
    padding: clamp(20px, 4vw, 30px);
    border-radius: var(--radius-large);
    border: 1px solid rgba(79, 181, 255, 0.2);
    background: linear-gradient(150deg, rgba(17, 28, 48, 0.92), rgba(8, 14, 28, 0.92));
    box-shadow: var(--shadow-strong);
    display: flex;
    flex-direction: column;
    gap: 18px;
    align-items: center;
}

.lobby-hex-canvas {
    max-width: 100%;
    border-radius: 20px;
    border: 1px solid rgba(79, 181, 255, 0.25);
}

.lobby-map-caption {
    text-align: center;
    color: var(--text-secondary);
}

.lobby-map-caption h3 {
    margin-bottom: 6px;
    font-size: 1.2rem;
    letter-spacing: 0.16em;
    text-transform: uppercase;
}

.lobby-card {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: clamp(18px, 3vw, 24px);
    border-radius: 20px;
    border: 1px solid rgba(79, 181, 255, 0.2);
    background: linear-gradient(155deg, rgba(17, 28, 48, 0.9), rgba(11, 19, 34, 0.92));
    box-shadow: var(--shadow-soft);
}

.lobby-card h3 {
    font-size: 1.1rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
}

.lobby-card p {
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
}

.lobby-card button {
    align-self: flex-start;
    padding: 12px 18px;
    border-radius: 16px;
    border: none;
    cursor: pointer;
    background: linear-gradient(125deg, rgba(82, 246, 197, 0.92), rgba(118, 75, 255, 0.82));
    color: #041021;
    font-weight: 600;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.lobby-card button:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 18px 36px rgba(82, 246, 197, 0.28);
}

.lobby-card.disabled {
    opacity: 0.65;
}

.lobby-card.disabled button {
    cursor: not-allowed;
    background: rgba(40, 52, 78, 0.55);
    color: rgba(161, 176, 206, 0.6);
    box-shadow: none;
}

@media (max-width: 860px) {
    .lobby-header {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .lobby-logout {
        justify-self: center;
    }
}

@media (max-width: 640px) {
    .lobby-shell {
        padding: clamp(16px, 6vw, 24px);
    }

    .lobby-map-card {
        padding: clamp(18px, 5vw, 24px);
    }
}
.joystick {
    position: fixed;
    bottom: 60px;
    left: 40px;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: rgba(24, 24, 24, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.06);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.55);
}

.joystick .stick {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(76, 205, 196, 0.8), rgba(118, 75, 162, 0.8));
}

.message-stack {
    position: fixed;
    bottom: 30px;
    right: 30px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 1200;
}

.message {
    padding: 16px 20px;
    border-radius: 14px;
    background: rgba(36, 36, 36, 0.92);
    border: 1px solid rgba(78, 205, 196, 0.35);
    box-shadow: 0 18px 36px rgba(0, 0, 0, 0.55);
    min-width: 220px;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

@keyframes pulse {
    0% { transform: scale(0.95); opacity: 0.65; }
    50% { transform: scale(1.05); opacity: 1; }
    100% { transform: scale(0.95); opacity: 0.65; }
}

::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
}

::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.18);
    border-radius: 999px;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.28);
}

