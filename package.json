{
  "name": "infinite-synthesis-game",
  "version": "1.0.0",
  "description": "AI驱动的无限合成资源网页游戏",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "db:init": "psql $DATABASE_URL -f server/db/schema.sql",
    "admin:create": "node server/db/create-admin.js",
    "admin:reset-password": "node server/db/reset-admin-password.js",
    "client:dev": "npm --prefix client run dev",
    "client:build": "npm --prefix client run build",
    "client:dev:nolog": "npm --prefix client run dev:nolog",
    "client:build:nolog": "npm --prefix client run build:nolog"
  },
  "keywords": ["game", "synthesis", "ai", "phaser"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "argon2": "^0.31.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "pino": "^8.16.2",
    "pino-http": "^8.6.0",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "openai": "^4.20.1",
    "rate-limiter-flexible": "^3.0.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}

